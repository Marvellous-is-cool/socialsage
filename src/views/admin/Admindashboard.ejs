<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1>Admin Dashboard</h1>
        <hr>

        <!-- User Management -->
        <section id="userManagement" class="my-4">
            <h2>User Management</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="userTableBody"></tbody>
            </table>
        </section>

        <!-- Subscription Plan Management -->
        <section id="planManagement" class="my-4">
            <h2>Subscription Plans</h2>
            <form id="planForm">
                <div class="mb-3">
                    <input type="text" class="form-control" name="name" placeholder="Plan Name" required />
                </div>
                <div class="mb-3">
                    <input type="number" class="form-control" name="price" placeholder="Price" required />
                </div>
                <div class="mb-3">
                    <textarea class="form-control" name="benefits" placeholder="Benefits (comma-separated)" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Create Plan</button>
            </form>
        </section>

        <!-- Task Upload -->
        <section id="taskUpload" class="my-4">
            <h2>Upload Tasks</h2>
            <form id="taskUploadForm">
                <div class="mb-3">
                    <select class="form-control" name="package" required>
                        <option value="" disabled selected>Select Package</option>
                        <option value="basic">Basic</option>
                        <option value="premium">Premium</option>
                    </select>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" name="task" placeholder="Task Description" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Upload Task</button>
            </form>
        </section>

        <!-- Task Verification -->
        <section id="taskVerification" class="my-4">
            <h2>Task Verification</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Task ID</th>
                        <th>User</th>
                        <th>Task</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="taskVerificationBody"></tbody>
            </table>
        </section>

        <!-- Payment Approval -->
        <section id="paymentApproval" class="my-4">
            <h2>Payment Approval</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Payment ID</th>
                        <th>User</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="paymentApprovalBody"></tbody>
            </table>
        </section>

        <!-- Withdrawal Approval -->
        <section id="withdrawalApproval" class="my-4">
            <h2>Withdrawal Approval</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>User</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="withdrawalApprovalBody"></tbody>
            </table>
        </section>
    </div>

